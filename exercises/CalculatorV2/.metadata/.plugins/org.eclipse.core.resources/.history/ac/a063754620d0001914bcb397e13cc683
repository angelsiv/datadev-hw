package client;

import bus.*;
import java.util.Scanner;

public class CalculatorTesterv2 {

	public static void main(String[] args) 
	{
		Calculator calculator = new Calculator();
		Scanner scanner = new Scanner(System.in);
		
		float result;
		string operator;
		
		System.out.print("\n\t Calculator\n");
		
		System.out.print("\n Input first number: \n");
		calculator.SetNumber1(scanner.nextFloat());
		
		System.out.print(" Input second number: \n");
		calculator.SetNumber2(scanner.nextFloat());
		
		do {
		System.out.print("\n Input operator(+, -, /, *): ");
		operator = scanner.nextLine();
		} while(operator != '+');
		
		switch(operator) {
		case '+':
			
			break;
		case '-':
			
			break;
		case '*':
			
			break;
		case '/':
			
			break;
		default:
			break;
		}
		
		
		
		
		
	}

}
